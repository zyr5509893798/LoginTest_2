<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllActivity.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注册"
                android:textSize="20sp"
                android:textColor="#000000">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/comment_back">
                </TextView>

                <ImageButton
                    android:id="@+id/register_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:background="@drawable/label2">
                </ImageButton>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp">
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_r_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        </TextView>

        <TextView
            android:id="@+id/tv_r_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="12dip"
            android:text="用户名："
            android:textSize="18sp"
            android:textColor="#000000">
        </TextView>

        <EditText
            android:id="@+id/et_r_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_r_user"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip">
        </EditText>

        <TextView
            android:id="@+id/tv_r_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_r_user"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="12dip"
            android:text="密码："
            android:textSize="18sp"
            android:textColor="#000000">
        </TextView>

        <EditText
            android:id="@+id/et_r_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_r_password"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip">
        </EditText>

        <TextView
            android:id="@+id/tv_r_repassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_r_password"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="12dip"
            android:text="确认密码："
            android:textSize="18sp"
            android:textColor="#000000">
        </TextView>

        <EditText
            android:id="@+id/et_r_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_r_repassword"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip">
        </EditText>

        <Button
            android:id="@+id/btn_r_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_r_repassword"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="#000000">
        </Button>
    </RelativeLayout>

</LinearLayout>